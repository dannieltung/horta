<% @transactions.each do |transaction| %>
  <p> <%= link_to "Transaction id# #{transaction.id}", transaction_path(transaction) %> </p>
  <p> product: <%= transaction.product.name %> </p>
  <p> quantity: <%= transaction.quantity %> </p>
  <p> created at: <%= transaction.created_at %> </p>
  <hr>
<% end %>
<table style="width:100%">
  <tr>
    <th>Item</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Total</th>
  </tr>
  <% @transactions.each do |transaction| %>
    <tr>
      <td> <%= transaction.product.name %> </td>
      <td> <%= transaction.quantity %> </td>
      <td> USD <%= transaction.product.price %>.00 </td>
      <td> USD <%= transaction.quantity * transaction.product.price %>.00 </td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <% grand_total = 0 %>
    <% @transactions.each do |transaction| %>
      <% grand_total += (transaction.quantity * transaction.product.price) %>
    <% end %>
    <td><strong>Total</strong> USD <%= grand_total %>.00 </td>
  </tr>
</table>